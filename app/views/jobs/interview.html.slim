.form_area
  h1 Create Interview
  = form_for @interview, url: {action: 'create_interview'} do |f|
    .form-input-area
      = f.label :interview_date
      br
      = f.datetime_field :interview_date, {value: Date.today}

    .form-input-area
      = f.label :approx_length, 'Esimated interview length'
      br
      = f.text_field :approx_length, {placeholder: '2 hours'}

    .form-input-area--checkbox
      = f.label :thank_you_sent do
        = f.check_box :thank_you_sent
        = 'Did you send a thank you?'
    
    .form-input-area
      = f.label :position_id, 'Which position?'
      br
      = f.collection_select :position_id, @positions, :id, :title
    
    .form-input-area
      = f.label :notes
      br
      = f.text_area :notes, {placeholder: 'jot some down...'}
    
    .form-input-area
      = f.submit 'Submit'
