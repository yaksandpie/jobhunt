.form_area
  h1 Create Company
  = form_for @company, url: {action: 'create_company'} do |f|
    .form-input-area
      = f.label :name, 'Company Name'
      br
      = f.text_field :name, {placeholder: 'xyz company'}
    
    .form-input-area
      = f.label :location
      br
      = f.text_field :location, {placeholder: 'SE Division St / 21st'}

    .form-input-area
      = f.label :url, 'URL'
      br
      = f.text_field :url, {placeholder: 'http://www.alexmiley.com'}
    
    .form-input-area
      =f.label :notes
      br
      = f.text_area :notes, {placeholder: 'jot some down...'}
    
    .form-input-area
      = f.submit 'Submit'

